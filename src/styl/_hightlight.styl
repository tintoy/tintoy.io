pre
    width 100%
    padding rem(20px) 0
    tab-size 4
    color sec
    margin rem(30px) 0
    font-size rem(14px)
    +above(cut)
        font-size rem(16px)
        padding rem(20px) 0
        margin rem(20px) 0
    code
        center(rem(800))
        padding 0 rem(20px)
        +below(cut)
            overflow-x: scroll;
    span
        line-height 1.5rem
        font-family 'Monaco','Consolas','Menlo',monospace

